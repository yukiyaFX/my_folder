<%= form_with model:@book, local:true do |f|%>
	<%= f.label :title, "Title" %>
  <%= f.text_field :title, value: @book.title %>

  <%= f.label :body, "Body" %>
  <%= f.text_area :body, value: @book.body %>

  <%= f.submit 'Update Book' %>
  <%if @book.present? %>
    <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
        <p><%= message %> error</p>
      <% end %>
    <% end %>  
  <% end %>
<% end %>
<%= link_to "Show", book_path(@book) %>
