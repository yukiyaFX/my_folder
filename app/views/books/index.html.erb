<%= notice %>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
  <tbody>
    <%if @books.present? %>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book) ,method: :delete  %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<h2>New Book</h2>

<%= form_with model:@book, local:true do |f|%>
	<%= f.label :title, "Title" %>
  <%= f.text_field :title%>

  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <%if @book.present? %>
    <% if @book.errors.any? %>
      <% @book.errors.full_messages.each do |message| %>
        <p><%= message %> error</p>
      <% end %>
    <% end %>  
   <% end %>  
<% end %>